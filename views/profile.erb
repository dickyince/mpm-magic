<% if !me %>


<form action="/login" method="GET">
  Name : <input type="text" value="<%= "Player #{request.ip}"%>" name="name"/>
  <input type="submit" value="Login" />
</form>



<% else %>
<div id="profile_title">
<h1><%= me.name %></h1>
</div>
<div id="logout_button">
<a href="/clear">Logout</a>
</div>
<div id="top_menu">
  <a href="/">Home Page</a>
</div>

<div id="player_title">
<h3>Player Details</h3>
</div>

